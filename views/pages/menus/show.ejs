<%- include('../../partials/header') %>

<div class="ui vertical stripe segment">
  <div class="ui middle aligned container">
    <h1 class="ui header"><%= menu.name %></h1>
    <h5>Menu By: <span class="user"><%= menu.user.username %></span></h5>
    <hr />
    <div class="ui vertical stripe segment">
        <div class="ui middle aligned container">
            <% if (menu.recipes) { %>
                    <div class="ui link cards">
                        <% menu.recipes.forEach(function(recipe){ %>
                            <div class="card">
                                <div class="content">
                                    <div class="header">
                                        <a class="ui mini primary circular icon button" href="/recipes/<%= recipe._id %>">
                                        <i class="fa fa-info"></i></a><%= recipe.dish_title %>
                                    </div>
                                    <div class="extra content">
                                        <p><i class="fa fa-bread-slice fa-2x"></i></p>
                                    </div>
                                </div>  
                            </div>
                        <% }); %>
                    </div>
            <% } %>
        </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
